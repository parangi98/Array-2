//Time:O(n)
//Space:O(1)
//Leetcode:Yes

class Solution {
    public List<Integer> findDisappearedNumbers(int[] nums) {
        List<Integer> result = new ArrayList<>(); 
        int index=0;
        for(int i=0;i<nums.length;i++)
        {
            index = Math.abs(nums[i])-1; // If number is negative then convert it to positive.
            if(nums[index]>0)
                nums[index] = -1 *nums[index]; // Number is converted into negative to mark as visited
        }
        for(int i=0;i<nums.length;i++)
        {
            if(nums[i]<0)
            {
                nums[i] = -1*nums[i]; //COnverting back the array into original array.
                
            }
            else
            {
                result.add(i+1); // Add the index which were having positive number as those are the missing indexes.
            }
        }
        return result;
    }
}
